                //- input#fan(type='checkbox', checked=fan, disabled=true)
                //- span.lever
                //- i.material-icons.light-green-text.text-accent-3 power_settings_new
    div.col.s12.m4
      div.card.blue-grey.darken-1
        div.card-content.white-text
          span.card-title Pump
          p
            div.switch
              label
                i.material-icons.text-lighten-2 not_interested
